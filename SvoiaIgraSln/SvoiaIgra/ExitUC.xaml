<UserControl x:Class="SvoiaIgra.ExitUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvoiaIgra" xmlns:vm="clr-namespace:SvoiaIgra.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <d:UserControl.DataContext>
        <vm:MyOwnGameViewModel/>
    </d:UserControl.DataContext>

    <Grid>
        <Viewbox>
            <TextBlock Text="Точно выйти?"
                       Margin="10"/>
        </Viewbox>
        <UniformGrid Columns="2" VerticalAlignment="Bottom">
            <Button Content="Надоело - иду спать!"
                    Margin="10" Padding="15 5"
                    Click="OnExit"/>
            <Button Content="Не... Дальше играем!"
                    Margin="10" Padding="15 5"
                    Command="{Binding WelcomeCommand}"/>
        </UniformGrid>
    </Grid>
</UserControl>
